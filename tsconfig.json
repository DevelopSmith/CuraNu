{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
      "react/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.tsx",
      "**/*.test.ts"
    ]
}
  